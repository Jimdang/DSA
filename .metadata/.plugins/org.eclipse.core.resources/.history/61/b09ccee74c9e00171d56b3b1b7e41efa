import java.io.*;
import java.util.Scanner;
/**
 * Class to read a given file 
 * @author James, Mohib
 *
 */
public class Read {

	private String a;
	private String b;
	private String c;
	private String d;
	private Scanner x;
	File file;
	
	/**
	 * Constructor to initialize the fields
	 */
	public Read()
	{
		this.a = "";
		this.b = "";
		this.c = "";
		this.d = "";
		this.file = new File("D:DSA/Lab1_Revised/TestFile.txt");
	}
	
	public String getA()
	{
		return a;
	}
	
	public String getB()
	{
		return b;
	}
	
	public String getC()
	{
		return c;
	}
	
	public String getD()
	{
		return d;
	}
	
	public void openFile()
	{
		try{
			
			x = new Scanner(file);
		}
		catch (Exception e){
			System.out.println("could not find file"); 
		}
	}
	
	public void closeFile()
	{
		x.close(); 
	}
	
	public void readFirstLine()
	{
		if(x.hasNextLine()) {
			a = x.next();
			if(a.equals("0") || a.equals("1") || a.equals("2") || a.equals("3")
					|| a.equals("4")|| a.equals("5") || a.equals("6")) {
				System.out.println(a);
			}
			else {
				System.out.println("Invalid player number");
			}
		}
	}
	
	public void readFile()
	{
		
	}
}
